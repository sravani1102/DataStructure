#include<stdio.h>
#include<stdlib.h>
#define MAX 5
int a[MAX];
int f=-1,r=-1;
void enque(int x)
{
        if(r+1==f || r==MAX-1 && f==0)
        {
                printf("Queue Over Flow\n");
        }
        else
        {
                if(f==-1)
                        r=f=0;
                else if(r==MAX-1 && f!=0)
                        r=0;
                else
                        r++;
                a[r]=x;
        }
}
int deque()
{
        if(f==-1)
        {
                return -1;
        }
        else
        {
                int x=a[f];
                if(f==r)
                        f=r=-1;
                else if(f==MAX-1)

                        f=0;
                else
                        f++;
                return x;
        }
}
void display()
{
        if(f==-1)
                printf("Circular Queue not found\n");
        else
        {
                printf("Circular Queue:\n");
                if(f<r)
                {
                        for(int i=f;i<=r;i++)
                                printf("%d\t",a[i]);
                }
                else
                {
                        for(int i=f;i<=MAX-1;i++)
                                printf("%d\t",a[i]);
                        for(int i=0;i<=r;i++)
                                printf("%d\t",a[i]);
                }
                printf("\n");
        }
}

void main()
{
        int ch,x;
        printf("Menu Driven\n1.Enqueue\n2.Dequeue\n3.Display\n4.Exit\n");
        while(1)
        {
                printf("Enter your choice:\n");
                scanf("%d",&ch);
                switch(ch)
                {
                        case 1:printf("Enter a value to enque an element in queue\n");
                               scanf("%d",&x);
                               enque(x);
                               break;
                        case 2:x=deque();
                               if(x==-1)
                               printf("Queue Under Flow\n");
                               else
                                       printf("Deque element is %d\n",x);
                               break;
                        case 3:display();
                               break;
                        case 4:printf("While loop is terminated\n");
                               exit(0);
                               break;
                        default:printf("Check your choice\n");

                }
        }
}
