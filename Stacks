#include<stdio.h>
#include<stdlib.h>
#define MAX 5
int a[MAX],top=-1;
void push(int x)
{
        if(top==MAX-1)
        {
                printf("Over Flow\n");
        }
        else
        {
                a[++top]=x;
        }
}
int pop()
{
        if(top==-1)
        {
                printf("Under Flow\n");
                return 0;
        }
        else
        {
                top--;
                return a[top+1];
        }
}
int peek()
{
        return a[top];
}
void display()
{
        if(top==-1)
        {
                printf("No array\n");
        }
        else
        {
                for(int i=top;i>=0;i--)
                {
                        printf("%d\n",a[i]);
                }
        }
}
void main()
{
        int x,ch;
        printf("Menu Driven\n1.Push\n2.Pop\n3.peek\n4.display\n5.Exit\n");
        while(1)
        {
                printf("Enter your choice\n");
                scanf("%d",&ch);
                switch(ch)
                {
                        case 1:printf("Enter an element to push\n");
                               scanf("%d",&x);
                               push(x);
                               break;
                        case 2:x=pop();
                               printf("The pop element is %d\n",x);
                               break;
                        case 3:x=peek();
                               printf("The ppek element is %d\n",x);
                               break;
                        case 4:display();
                               break;
                        case 5:printf("While loop is terminated\n");
                               exit(0);
                        default:printf("check your choice\n");
                }
        }
}
